<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".Lifechat2Activity">

    <!-- Profile Layout -->
    <LinearLayout
        android:id="@+id/profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/arrowback2"
            android:background="@android:color/transparent"
            android:contentDescription="Back" />
        <!-- Profile Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/receiverPfp"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fotoprofil"
                android:contentDescription="Profile Picture" />

            <TextView
                android:layout_marginEnd="4dp"
                android:id="@+id/receiverName"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:padding="4dp"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_bg_profil" />
        </LinearLayout>

    </LinearLayout>

    <!-- Chat Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/bg_chat"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/profil"
        app:layout_constraintBottom_toTopOf="@id/inputContainer">

        <!-- ScrollView for Chat -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/receiverName"
            tools:ignore="Suspicious0dp">

            <!-- Chat Container -->
            <LinearLayout
                android:id="@+id/chatContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Input Container -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bubble_input_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- "+" Button -->
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/addfile_icon"
            android:contentDescription="Add File"
            android:layout_gravity="center_vertical" />

        <!-- Message Input -->
        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a message"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <!-- Send Button -->
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/send_icon"
            android:backgroundTint="@color/orange"
            android:contentDescription="Send"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
